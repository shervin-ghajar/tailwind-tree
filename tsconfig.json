{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext", // or "es5" for wider compatibility
    "module": "esnext", // Use "esnext" for Rollup
    "declaration": true, // Generates .d.ts files
    "outDir": "./dist", // Output directory for compiled files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file
    "jsx": "react-jsx" // or "react-native" if applicable
  },
  "exclude": ["node_modules", "dist"], // Exclude node_modules and dist folders from compilation
  "include": ["src/**/*"] // Include your source files
}
