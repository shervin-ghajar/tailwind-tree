{
  "name": "tailwind-tree-monorepo",
  "private": false,
  "version": "0.2.2",
  "description": "A utility for writing deeply nested and composable Tailwind CSS classes using an expressive tree structure, supporting responsive and interactive variants for Tailwind v3 and v4.",
  "author": {
    "name": "Shervin Ghajar",
    "email": "ssghajar.work@gmail.com"
  },
  "homepage": "https://github.com/shervin-ghajar/tailwind-tree#readme",
  "keywords": [
    "tailwindcss",
    "tailwind",
    "tailwind-merge",
    "style",
    "css",
    "utility-first",
    "responsive",
    "design"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shervin-ghajar/tailwind-tree.git"
  },
  "license": "MIT",
  "type": "module",
  "exports": {
    "./tree": {
      "import": "./packages/tailwind-tree/dist/index.mjs",
      "require": "./packages/tailwind-tree/dist/index.cjs",
      "types": "./packages/tailwind-tree/dist/index.d.ts"
    },
    "./vite-plugin": {
      "import": "./packages/plugin/dist/index.mjs",
      "types": "./packages/plugin/dist/index.d.ts"
    },
    "./extractor": {
      "import": "./packages/extractor/dist/index.mjs",
      "require": "./packages/extractor/dist/index.cjs",
      "types": "./packages/extractor/dist/index.d.ts"
    }
  },
  "scripts": {
    "format": "prettier --write --cache .  --plugin=prettier-plugin-organize-imports",
    "lint": "eslint .",
    "test": "npx tsx ./example/test.ts",
    "build:tailwind-tree": "pnpm --filter tailwind-tree run build",
    "build:extractor": "pnpm --filter @tailwind-tree/extractor run build",
    "build:plugin": "pnpm --filter @tailwind-tree/vite-plugin run build",
    "build:all": "pnpm build:tailwind-tree && pnpm build:extractor && pnpm build:plugin",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/node": "^22.15.29",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup": "^4.41.1",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "@rollup/plugin-strip": "3.0.4",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "files": [
    "packages",
    "dist",
    "README.md",
    "LICENSE"
  ]
}
